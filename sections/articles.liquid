<section class="tw-text-gray-600 tw-body-font">
  <div class="tw-container tw-px-5 tw-py-24 tw-mx-auto">
    <div class="tw-flex tw-flex-wrap tw--m-4">
    {% for article in blogs['news'].articles limit:3 %}
      <div class="tw-p-4 md:tw-w-1/3">
        <div class="tw-h-full tw-border-2 tw-border-gray-200 tw-border-opacity-60 tw-rounded-lg tw-overflow-hidden">
          <img class="lg:tw-h-48 md:tw-h-36 tw-w-full tw-object-cover tw-object-center" src="{{ article.image.src | image_url: width: 500 }}" alt="blog">
          <div class="tw-p-6">
            {% for tag in article.tags limit:1 %}
            <h2 class="tw-tracking-widest tw-text-xs tw-title-font tw-font-medium tw-text-gray-400 tw-mb-1">{{ tag }}</h2>
            {% endfor %}
            <h1 class="tw-title-font tw-text-lg tw-font-medium tw-text-gray-900 tw-mb-3">{{ article.title }}</h1>
            <p class="tw-leading-relaxed tw-mb-3">{{ article.content | truncate: 100 | strip_html }}</p>
            <div class="tw-flex tw-items-center tw-flex-wrap">
              <a href="{{ article.url }}" class="tw-text-indigo-500 tw-inline-flex tw-items-center md:tw-mb-2 lg:tw-mb-0 tw-no-underline">Learn More
                <svg class="tw-w-4 tw-h-4 tw-ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}  
    </div>
  </div>
</section>


