<!-- This example requires Tailwind CSS v2.0+ -->
<div class="tw-relative tw-bg-white tw-overflow-hidden tw-mb-16">
  <div class="tw-max-w-7xl tw-mx-auto">
    <div class="tw-relative tw-z-10 tw-pb-8 tw-bg-white sm:tw-pb-16 md:tw-pb-20 lg:tw-max-w-2xl lg:tw-w-full lg:tw-pb-28 xl:tw-pb-32">
      <svg class="tw-hidden lg:tw-block tw-absolute -tw-right-24 tw-inset-y-0 tw-h-full tw-w-48 tw-text-white tw-transform tw-translate-x-1/2" fill="currentColor" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
        <polygon points="50,0 100,0 50,100 0,100"></polygon>
      </svg>

      <div>
        <div class="tw-relative tw-pt-6 tw-px-4 sm:tw-px-6 lg:tw-px-8">
          <nav class="tw-relative tw-flex tw-items-center tw-justify-between sm:tw-h-10 lg:tw-justify-start" aria-label="Global">
            <div class="tw-flex tw-items-center tw-flex-grow tw-flex-shrink-0 lg:tw-flex-grow-0">
              
            </div>
          </nav>
        </div>
      </div>

      <main class="tw-mt-10 tw-mx-auto tw-max-w-7xl tw-px-4 sm:tw-mt-12 sm:tw-px-6 md:tw-mt-16 lg:tw-mt-20 lg:tw-px-8 xl:tw-mt-28">
        <div class="sm:tw-text-center lg:tw-text-left">
          <h1 class="tw-text-4xl tw-tracking-tight tw-font-extrabold tw-text-gray-900 sm:tw-text-5xl md:tw-text-6xl">
            <span class="tw-block xl:tw-inline">{{ section.settings.hello-text-first }}</span>
            <span class="tw-block tw-text-indigo-600 xl:tw-inline">{{ section.settings.hello-text-second }}</span>
          </h1>
          <p class="tw-mt-3 tw-text-base tw-text-gray-500 sm:tw-mt-5 sm:tw-text-lg sm:tw-max-w-xl sm:tw-mx-auto md:tw-mt-5 md:tw-text-xl lg:tw-mx-0">{{ section.settings.hello-description }}</p>
          <div class="tw-mt-5 sm:tw-mt-8 sm:tw-flex sm:tw-justify-center lg:tw-justify-start">
            <div class="tw-rounded-md tw-shadow">
            {%- if section.settings.hello-link-first != blank -%}
              <a href="{{ section.settings.hello-link-first }}" class="tw-w-full tw-flex tw-items-center tw-justify-center tw-px-8 tw-py-3 tw-border tw-border-transparent tw-text-base tw-font-medium tw-rounded-md tw-text-white tw-bg-indigo-600 hover:tw-bg-indigo-700 md:tw-py-4 md:tw-text-lg md:tw-px-10 tw-no-underline"> {{ section.settings.hello-link-first-display-name }} </a>
            {%- endif -%}
            </div>
            <div class="tw-mt-3 sm:tw-mt-0 sm:tw-ml-3">
            {%- if section.settings.hello-link-second != blank -%}
              <a href="{{ section.settings.hello-link-second }}" class="tw-w-full tw-flex tw-items-center tw-justify-center tw-px-8 tw-py-3 tw-border tw-border-transparent tw-text-base tw-font-medium tw-rounded-md tw-text-indigo-700 tw-bg-indigo-100 hover:tw-bg-indigo-200 md:tw-py-4 md:tw-text-lg md:tw-px-10 tw-no-underline"> {{ section.settings.hello-link-second-display-name }} </a>
            {%- endif -%}
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <div class="lg:tw-absolute lg:tw-inset-y-0 lg:tw-right-0 lg:tw-w-1/2">
  {%- if section.settings.hello-image != blank -%}
    <img class="tw-h-56 tw-w-full tw-object-cover sm:tw-h-72 md:tw-h-96 lg:tw-w-full lg:tw-h-full" src="{{ section.settings.hello-image | img_url: 'grande' }}" alt="">
    {%- else -%}
    <img class="tw-h-56 tw-w-full tw-object-cover sm:tw-h-72 md:tw-h-96 lg:tw-w-full lg:tw-h-full" src="https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=2850&amp;q=80" alt="">
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": {
    "ja": "hello-section"
  },
  "presets": [
    {
      "name": {
        "ja": "hello-section"
      },
      "category": {
        "ja": "hello-section"
      }
    }
  ],
  "settings": [
      {
          "id": "hello-text-first",
          "type": "text",
          "label": "firtst sentence",
          "default": "Data to enrich your"
      },
      {
          "id": "hello-text-second",
          "type": "text",
          "label": "second sentence",
          "default": "online business"
      },
      {
          "id": "hello-description",
          "type": "text",
          "label": "discription",
          "default": "Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua."
      },
      {
          "id": "hello-link-first",
          "type": "url",
          "label": "first url"
      },
      {
          "id": "hello-link-first-display-name",
          "type": "text",
          "label": "first link display name",
          "default": "first link"
      },
      {
          "id": "hello-link-second",
          "type": "url",
          "label": "second url"
      },
      {
          "id": "hello-link-second-display-name",
          "type": "text",
          "label": "second link display name",
          "default": "second link"
      },
      {
          "id": "hello-image",
          "type": "image_picker",
          "label": "Pick image"
      }
  ]
}
{% endschema %}
